<section class="setView makePaymentView hide">
  <h2 class="sub-header">Make Payment</h2>
  <br>
  <div class="row">
    <form role="form">

      <div class="col-sm-4 paymentFunnel choosePayee">
        <div class="payeeField addPayee" data-view="createPayeeView">
          <span class="glyphicon glyphicon-plus-sign"></span>
        </div>
        <div class="payeeField text-muted noPayee">No payee's added</div>
      </div>

      <div class="col-sm-4 paymentFunnel">
      </div>

      <div class="col-sm-4">
      </div>

      <div class="col-sm-offset-6 col-sm-6 mt">
        <button type="submit" class="btn btn-default btn-bank-account">Send payment</button>
      </div>

    </form>
  </div>

  <br><br>
  <div class="row">
    <div class="col-sm-6 col-md-6">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label for="payeeName" class="col-sm-2 control-label">Choose payee</label>
          <div class="col-sm-10">
            <select class="form-control" disabled>
              <option>No payee's added</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="amount" class="col-sm-2 control-label">Amount</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="amount" placeholder="0,00 EUR">
          </div>
        </div>
        <div class="form-group">
          <label for="date" class="col-sm-2 control-label">Date</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="date" placeholder="Date">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-6 col-sm-6">
            <button type="submit" class="btn btn-default btn-bank-account">Send payment</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>